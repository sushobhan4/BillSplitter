<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:rippleColor="@color/button_primary_text">
    <!-- app:cardBackgroundColor is removed to allow the inner layout's background to show -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/expense_card_gradient"
        android:clickable="false"
        android:duplicateParentState="true"
        android:focusable="false"
        android:padding="10dp">

        <!-- HEADER -->
        <LinearLayout
            android:id="@+id/expense_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:gravity="top"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/expenseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:singleLine="true"
                    android:text="Chicken"
                    android:textColor="@color/button_primary_text"
                    android:textSize="34sp" />
            </HorizontalScrollView>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false" />

            <TextView
                android:id="@+id/expenseAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false"
                android:text="399"
                android:textColor="@color/button_primary_text"
                android:textSize="34sp" />

        </LinearLayout>

        <!-- PAYER + CONSUMERS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expense_header_layout">

            <TextView
                android:id="@+id/payerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false"
                android:text="Sushobhan"
                android:textColor="@color/button_primary_text"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:duplicateParentState="true"
                android:fillViewport="true"
                android:focusable="false"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/names_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/contributorList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:duplicateParentState="true"
                        android:focusable="false"
                        android:text="Alice Garry Bob Charlie David"
                        android:textColor="@color/button_primary_text"
                        android:textSize="16sp" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>