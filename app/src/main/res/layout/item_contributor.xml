<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Contributor Name Input -->
    <EditText
        android:id="@+id/etContributorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_white_input"
        android:fontFamily="@font/josefin_sans_regular"
        android:gravity="center_vertical"
        android:hint="Name"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="textCapWords"/>

    <!-- Delete Button (Red trash can) -->
    <ImageButton
        android:id="@+id/btnDeleteContributor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@android:drawable/ic_delete"
        android:contentDescription="Delete Contributor"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:tint="@android:color/white" />

</LinearLayout>